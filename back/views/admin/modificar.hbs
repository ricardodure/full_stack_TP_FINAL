<div class="contanter" style="margin:50px auto">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Modificar el producto</h4>
            <form method="post" action="/admin/productos/modificar" enctype="multipart/form-data" >
                <input type="hidden" value="{{producto.id}}" name="id">
                <div class="form-group">
                    <input type="text" placeholder="Titulo" value="{{producto.titulo}}" class="form-control"
                        name="titulo">
                </div>
                <div class="form-group">
                    <textarea placeholder="Subtitulo" class="form-control"
                        name="subtitulo"> {{producto.subtitulo}}</textarea>
                </div>

                <div class="form-group">
                    <p>
                        <label>Imagen: <input type="file" name="imagen" id="imagen" /></label>
                    </p>
                    <p>
                        <label><input type="checkbox" name="img_delete" id="img_delete" value="1">
                         Eliminar imagen actual?
                         </label>
                        <input type="hidden" name="img_original" value="{{producto.img_id}}">
                    </p>
                </div>

                <div class="form-group">
                    <textarea placeholder="Cuerpo" class="form-control" name="cuerpo"> {{producto.cuerpo}}</textarea>
                </div>
                <button type="submit" class="btn btn-primary">Modificar</button>
            </form>
            {{#if error}}
            <h5>{{message}}</h5>
            {{/if}}
        </div>
    </div>
</div>