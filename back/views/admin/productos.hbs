<div class="row">
    <div class="col">
        <table class="table">
            <thead>
                <tr class="table-dark">
                    <th scope="col">#</th>
                    <th scope="col">Titulo</th>
                    <th scope="col">Imagen</th>
                    <th class="text-end">Acciones</th>
                </tr>
            </thead>
            <tbody>

                {{#each productos}}
                <tr>
                    <th scope="row">{{id}}</th>
                    <td>{{titulo}}</td>
                    <td> {{{imagen}}} </td>
                    <td class="text-end">
                        <a class="btn btn-secondary" href="/admin/productos/modificar/{{id}}">
                            <i class="fa fa-pencil" aria-hidden="true"></i></a>
                        <a class="btn btn-secondary" href="/admin/productos/eliminar/{{id}}">
                            <i class="fa fa-trash" aria-hidden="true"></i></a>
                    </td>
                </tr>
                {{/each}}                
            </tbody>
        </table>
    </div>
</div>
